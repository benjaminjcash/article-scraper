<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Scraped Articles</h1>
    </div>
    <ul>
        {{#each articles}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ title }}</h5>
                <p class="card-text">{{ summary }}</p>
                <a href="{{ link }}" class="btn btn-primary">Full Article</a>
            </div>
        </div>
        {{/each}}
    </ul>
</div>